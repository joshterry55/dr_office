<h1>Doctors</h1>
<hr>
<% if @doctors.any? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Specialty</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @doctors.each do |doctor| %>
        <tr>
          <td><%= doctor.name %></td>
          <td><%= doctor.specialty %></td>
          <td><%= link_to 'Show', doctor_path(doctor) %></td>
          <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
          <td><%= link_to 'Remove', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h4 class='center'>No doctors added! Please add one.</h4>
<% end %>
<br />
<div class="center">
  <%= link_to 'Add Doctor', new_doctor_path, class: 'btn blue darken-3' %>
</div>
